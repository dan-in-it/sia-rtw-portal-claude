# Database
# For local PostgreSQL (adjust username, password, and database name as needed)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sia_rtw_portal?schema=public&sslmode=prefer"

# Alternative connection strings for different setups:
# - With custom user: postgresql://sia_admin:your_password@localhost:5432/sia_rtw_portal?schema=public
# - Windows with spaces in username: postgresql://postgres:password@localhost:5432/sia_rtw_portal?schema=public
# - Supabase: postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres
# - Neon: postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# Note: If you get authentication errors, try these troubleshooting steps:
# 1. Make sure PostgreSQL is running: (Windows) Check Services, (Mac/Linux) systemctl status postgresql
# 2. Verify your PostgreSQL password is correct
# 3. Ensure the database exists: psql -U postgres -c "CREATE DATABASE sia_rtw_portal;"
# 4. Try with postgres user first, then create custom user once it works

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Anthropic AI (for chatbot)
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-password"
SMTP_FROM="noreply@sia-rtw.com"

# Vector Database (Pinecone for embeddings)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-environment"
PINECONE_INDEX="sia-rtw-knowledge"

# File Storage (optional - for attachments)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="sia-rtw-attachments"

# Application Settings
NEXT_PUBLIC_APP_NAME="SIA RTW Portal"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Session
SESSION_MAX_AGE=86400
